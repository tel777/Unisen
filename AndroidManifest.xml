<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.unisen"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/home_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.unisen.HomeActivity"
            android:configChanges="keyboardHidden"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.unisen.SubActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/title_activity_sub"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.unisen.CountActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/title_activity_count"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.unisen.RankActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/title_activity_rank"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.unisen.ResultActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/title_activity_result"
            android:screenOrientation="portrait" >
        </activity>

        <provider
            android:name="com.example.unisen.RankProvider"
            android:authorities="com.example.unisen" />

        <activity
            android:name="com.example.unisen.MainActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.unisen.MainToResultActivity"
            android:label="@string/title_activity_main_to_result" >
        </activity>
    </application>

</manifest>